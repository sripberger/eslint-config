{
	"name": "@sripberger/eslint-config",
	"version": "0.2.2",
	"description": "Personal eslint configuration for TypeScript projects in Node",
	"author": "Steve Ripberger",
	"license": "MIT",
	"repository": "github:sripberger/eslint-config",
	"type": "module",
	"files": [
		"dist/eslint-config.js"
	],
	"exports": {
		".": "./dist/eslint.config.js"
	},
	"scripts": {
		"lint": "eslint src --config src/eslint.config.ts",
		"lint-fix": "npm run lint -- --fix",
		"build": "tsc",
		"preversion": "npm run lint",
		"prepublishOnly": "git push && git push --tags"
	},
	"devDependencies": {
		"@types/node": "^22.13.9",
		"eslint": "^9.22.0",
		"jiti": "^2.4.2",
		"type-fest": "^4.37.0",
		"typescript": "^5.8.2"
	},
	"peerDependencies": {
		"eslint": ">= 9"
	},
	"dependencies": {
		"@eslint/js": "^9.21.0",
		"@stylistic/eslint-plugin": "^4.2.0",
		"eslint-import-resolver-typescript": "^3.8.3",
		"eslint-plugin-import-x": "^4.6.1",
		"globals": "^16.0.0",
		"typescript-eslint": "^8.26.0"
	}
}
